<Page x:Class="WpfApp1.AuthenticationPages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.AuthenticationPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBox x:Name="LoginText" HorizontalAlignment="Left" Height="32" Margin="277,127,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="258" FontSize="18"/>
        <TextBox x:Name="PassText" HorizontalAlignment="Left" Height="32" Margin="277,181,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="258" FontSize="18"/>

        <Button x:Name="LoginBtn" Content="Войти" HorizontalAlignment="Left" Margin="277,230,0,0" VerticalAlignment="Top" Width="258" RenderTransformOrigin="0.58,0.35" Height="62" Click="LoginBtn_Click" FontSize="18"/>
        <Button x:Name="RegistrationBtn" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="277,296,0,0" VerticalAlignment="Top" Width="258" Height="62" Click="RegistrationBtn_Click" FontSize="18"/>

    </Grid>
</Page>
